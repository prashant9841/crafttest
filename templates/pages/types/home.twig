{% extends "_layout" %}

{% block content %}
<div class="section first">
	<div
		class="image"
		{%
		if
		entry.displayImage[0]
		%}
		style="background-image: url('/assets/img/{{
			entry.displayImage[0].fileName
		}}')"
		{%
		endif
		%}
	>
		<div class="overlay">
			<div class="container">
				<h1 class="display-5">{{ entry.mainTitle }}</h1>
				<h5>{{ entry.tagLine }}</h5>
			</div>
		</div>
	</div>
</div>
<section class="section intro second">
	<div class="container">
		<h3 class="display-5">
			{{ entry.introTitle }}
		</h3>
		<p class="intro-description">
			{{ entry.introDescription }}
		</p>
	</div>
</section>
<section class="section slider third">
	<div class="slickSlider">
		{% for sliderItem in entry.slider %}
		<div class="slider-item">
			<div class="container">
				<img
					src="assets/img/{{ sliderItem.sliderImage[0].filename }}"
					alt="{{ sliderItem.sliderTitle }}"
				/>
				<div class="caption">
					<h3>{{ sliderItem.sliderTitle }}</h3>
					<p>{{ sliderItem.sliderDescription }}</p>
				</div>
			</div>
		</div>
		{%endfor%}
	</div>
</section>
{% endblock %}